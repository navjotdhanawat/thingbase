{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "infra/emqx/Dockerfile",
        "watchPatterns": [
            "infra/emqx/**"
        ]
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": null,
        "healthcheckTimeout": 30
    }
}