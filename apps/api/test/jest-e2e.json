{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/shared$": "<rootDir>/../../packages/shared/dist"
  },
  "testTimeout": 60000,
  "verbose": true,
  "detectOpenHandles": true
}


